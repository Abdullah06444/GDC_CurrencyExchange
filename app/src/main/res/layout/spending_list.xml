<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/imageRow"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spendingExplanation"
            android:hint="@string/spendingexplanation"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_toEndOf="@+id/imageRow"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spendingType"
            android:hint="@string/spendingtype"
            android:textStyle="bold"
            android:textColor="@color/lightgray"
            android:textColorHint="@color/lightgray"
            android:layout_toEndOf="@+id/imageRow"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/spendingExplanation"/>

        <TextView
            android:id="@+id/spendingAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/spendingExplanation"
            android:hint="@string/spendingamount"
            android:textColor="@color/lightgold"
            android:textColorHint="@color/lightgold"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spendingCurrency"
            android:hint="@string/spendingcurrency"
            android:textStyle="bold"
            android:textColor="@color/darkgold"
            android:textColorHint="@color/darkgold"
            android:layout_toEndOf="@+id/spendingExplanation"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/spendingAmount"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>